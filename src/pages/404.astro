---
import PageLayout from '@/layouts/Base.astro';

const meta = {
  description: 'This room is currently occupied... by something else.',
  title: 'Room Not Found | REDRUM',
};
---

<PageLayout meta={meta}>
  <div class="hotel-paper rounded-lg p-8">
    <h1 class="title typewriter mb-6">Room 404 | Not Available</h1>

    <div class="mb-8 space-y-4 text-lg">
      <p class="ominous-link">
        <strong>The Manager</strong> is not available at this time.
      </p>

      <p class="text-gray-400">
        This room appears to be... <span class="text-accent">occupied</span>.
      </p>
    </div>

    <div class="space-y-4">
      <p class="text-accent font-semibold">
        Please return to <a href="/" class="hotel-nav-link underline"
          >The Lobby</a
        >
      </p>
    </div>
  </div>
</PageLayout>
